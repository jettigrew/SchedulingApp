<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DisplayAppointmentsController">
   <children>
      <VBox prefHeight="600.0" prefWidth="950.0">
         <children>
            <Label alignment="CENTER" prefHeight="131.0" prefWidth="950.0" text="Appointments" textAlignment="CENTER">
               <font>
                  <Font name="Verdana" size="45.0" />
               </font>
            </Label>
            <TabPane prefHeight="320.0" prefWidth="950.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="This Week">
                     <content>
                        <TableView fx:id="weekAppointmentsTable" prefHeight="550.0" prefWidth="850.0">
                          <columns>
                            <TableColumn fx:id="weekAppointmentsAppointment_IDCol" prefWidth="100.0" text="Appointment_ID" />
                            <TableColumn fx:id="weekAppointmentsTitleCol" prefWidth="75.0" text="Title" />
                              <TableColumn fx:id="weekAppointmentsDescriptionCol" prefWidth="110.0" text="Description" />
                              <TableColumn fx:id="weekAppointmentsLocationCol" prefWidth="95.0" text="Location" />
                              <TableColumn fx:id="weekAppointmentsContactCol" prefWidth="85.0" text="Contact" />
                              <TableColumn fx:id="weekAppointmentsTypeCol" prefWidth="65.0" text="Type" />
                              <TableColumn fx:id="weekAppointmentsStartCol" prefWidth="140.0" text="Start Date/Time" />
                              <TableColumn fx:id="weekAppointmentsEndCol" prefWidth="140.0" text="End Date/Time" />
                              <TableColumn fx:id="weekAppointmentsCustomer_IDCol" prefWidth="89.5999755859375" text="Customer_ID" />
                          </columns>
                        </TableView>
                     </content>
                </Tab>
                  <Tab text="This Month">
                     <content>
                        <TableView fx:id="monthAppointmentsTable" prefHeight="550.0" prefWidth="850.0">
                           <columns>
                              <TableColumn fx:id="monthAppointmentsAppointment_IDCol" prefWidth="100.0" text="Appointment_ID" />
                              <TableColumn fx:id="monthAppointmentsTitleCol" prefWidth="75.0" text="Title" />
                              <TableColumn fx:id="monthAppointmentsDescriptionCol" prefWidth="110.0" text="Description" />
                              <TableColumn fx:id="monthAppointmentsLocationCol" prefWidth="95.0" text="Location" />
                              <TableColumn fx:id="monthAppointmentsContactCol" prefWidth="85.0" text="Contact" />
                              <TableColumn fx:id="monthAppointmentsTypeCol" prefWidth="65.0" text="Type" />
                              <TableColumn fx:id="monthAppointmentsStartCol" prefWidth="140.0" text="Start Date/Time" />
                              <TableColumn fx:id="monthAppointmentsEndCol" prefWidth="140.0" text="End Date/Time" />
                              <TableColumn fx:id="monthAppointmentsCustomer_IDCol" prefWidth="89.20001220703125" text="Customer_ID" />
                           </columns>
                        </TableView>
                     </content>
                  </Tab>
                  <Tab text="All Appointments">
                     <content>
                        <TableView fx:id="allAppointmentsTable" prefHeight="550.0" prefWidth="850.0">
                           <columns>
                              <TableColumn fx:id="allAppointmentsAppointment_IDCol" prefWidth="100.0" text="Appointment_ID" />
                              <TableColumn fx:id="allAppointmentsTitleCol" prefWidth="75.0" text="Title" />
                              <TableColumn fx:id="allAppointmentsDescriptionCol" prefWidth="110.0" text="Description" />
                              <TableColumn fx:id="allAppointmentsLocationCol" prefWidth="95.0" text="Location" />
                              <TableColumn fx:id="allAppointmentsContactCol" prefWidth="85.0" text="Contact" />
                              <TableColumn fx:id="allAppointmentsTypeCol" prefWidth="65.0" text="Type" />
                              <TableColumn fx:id="allAppointmentsStartCol" prefWidth="140.0" text="Start Date/Time" />
                              <TableColumn fx:id="allAppointmentsEndCol" prefWidth="140.0" text="End Date/Time" />
                              <TableColumn fx:id="allAppointmentsCustomer_IDCol" prefWidth="89.20001220703125" text="Customer_ID" />
                           </columns>
                        </TableView>
                     </content>
                  </Tab>
              </tabs>
               <padding>
                  <Insets left="25.0" right="25.0" />
               </padding>
            </TabPane>
            <ButtonBar prefHeight="50.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#addAppointmentHandler" prefHeight="35.0" prefWidth="70.0" text="Add">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
                  <Button layoutX="785.0" layoutY="10.0" mnemonicParsing="false" onAction="#updateAppointmentHandler" prefHeight="35.0" prefWidth="70.0" text="Update">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
                  <Button layoutX="785.0" layoutY="10.0" mnemonicParsing="false" onAction="#deleteAppointmentHandler" prefHeight="35.0" prefWidth="70.0" text="Delete">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
              </buttons>
               <padding>
                  <Insets left="50.0" right="30.0" top="15.0" />
               </padding>
            </ButtonBar>
            <Hyperlink onAction="#customersSwitchHandler" text="Customers">
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Hyperlink>
            <Hyperlink layoutX="10.0" layoutY="518.0" onAction="#reportsSwitchHandler" text="Reports">
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Hyperlink>
         </children>
      </VBox>
   </children>
</AnchorPane>
